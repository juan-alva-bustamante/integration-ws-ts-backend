{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true, 
    "skipDefaultLibCheck": true,   
    "skipLibCheck": true,
    "rootDir": "src"
  },
  "include": [
    "dist",
    "src"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tss",
  ]
}